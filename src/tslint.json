{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-interfaces"
    ],
    "file-name-casing": [
      false,
      "camel-case"
    ],
    "directive-selector-name": [
      true,
      "camelCase"
    ],
    "component-selector-name": [
      false,
      "camelCase"
    ],
    "rules": { "class-name": false },
    "interface-name": [
      false,
      "never-prefix"
    ]
  }
}
